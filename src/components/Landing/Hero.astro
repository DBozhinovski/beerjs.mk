---
import ArrowLinkDiagonal from '../../icons/arrow-link-diagonal.astro';
import BigText from '../BigText.astro';
import Link from '../Link.astro';


interface Props {
  subtitle: string,
  ctaSubmitTalk: string,
  ctaGetInvolved: string,
}


const { subtitle, ctaSubmitTalk, ctaGetInvolved } = Astro.props;

---

<div class="flex flex-col items-center justify center">
  <div class="pt-[80px] md:pt-[160px] w-full">
    <BigText title="beer.js" subtitle={subtitle}>
  </div>
  <div class="mt-[120px] md:mt-[220px] flex flex-col md:flex-row gap-[18px] md:gap-[48px] w-full items-center justify-center">
    <Link href="/submit-a-talk">{ctaSubmitTalk} <ArrowLinkDiagonal /></Link>
    <Link href="/get-involved" variant={2}>{ctaGetInvolved} <ArrowLinkDiagonal fill="light" /></Link>
  </div>
</div>