---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="flex flex-col items-center justify-center w-full relative">
  <h1
    class="text-byellow font-jetbrains uppercase block text-[80px] sm:text-[120px] md:text-[160px] lg:text-[227px] font-extrabold leading-none tracking-tighter"
  >
    {title}
  </h1>
  <h2 class="bg-white flex items-center justify-center font-jetbrains text-[16px] sm:text-[23px] md:text-[32px] lg:text-[48px] font-bold absolute -bottom-[45px] sm:-bottom-[50px] lg:-bottom-[65px]">
    {subtitle}
  </h2>
</div>

<style>
  h1 {
    text-shadow: -9px -9px 0px #0f0d0e;
  }

  h2 {
    border: 6px solid #0f0d0e;
    padding: 6px 24px;
    transform: rotate(-4deg);
  }
</style>